                        Orientation="Horizontal"
                        Margin="140,25,0,5" 
                        Grid.Column="1" 
                        Grid.ColumnSpan="2" 
                        HorizontalAlignment="Left" 
                        Width="496">-->
        
        <StackPanel Grid.Row="0" 
                    Orientation="Horizontal" 
                    Margin="100,10,25,0" 
                    Grid.Column="1" 
                    HorizontalAlignment="Right" 
                    Width="auto">
            
            <!-- Screenshot Button - Styled and Active -->
            <Button Name="CaptureButton" Style="{StaticResource SmoothPrimaryButtonStyle}" Click="CaptureButton_Click" 
                    Content="📷 New Screenshot"
                    Padding="16,10" Margin="5"/>
            <Button Name="CopyButton" Style="{StaticResource SmoothSecondaryButtonStyle}" Click="CopyButton_Click" 
                    Content="📋 Copy Screenshot"
                    Padding="16,10" Margin="5"/>
            <Button Name="SaveButton" Style="{StaticResource SmoothSecondaryButtonStyle}" Click="SaveButton_Click" 
                    Content="💾 Save Screenshot"
                    Padding="16,10" Margin="5"/>

        </StackPanel>



