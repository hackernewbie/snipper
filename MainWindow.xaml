                            <ComboBoxItem Content="Extra Large (60px)" Tag="60"/>
                            <ComboBoxItem Content="Custom" Tag="-1"/>
                        </ComboBox>

                        <TextBlock Text="px" 
                                   VerticalAlignment="Center" HorizontalAlignment="Center"
                                   Margin="5,2,0,0"/>
                    </StackPanel>-->

                    <!-- Watermark Section -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,10" VerticalAlignment="Center">
                        <CheckBox x:Name="WatermarkToggle" IsChecked="True"
                                  ToolTip="Enable / Disable Watermark" VerticalAlignment="Center" Margin="0,0,10,0" Checked="WatermarkToggle_Checked" Unchecked="WatermarkToggle_Unchecked"/>

                        <TextBox x:Name="WatermarkInput"
                                     Width="180"
                                     Height="25"
                                     Margin="0,0,0,0"
                                     Style="{StaticResource StyledTextBox}"
                                     Text="{Binding PropWatermarkText}"
                                     VerticalContentAlignment="Center"
                                     TextChanged="WatermarkInput_TextChanged"
                                     IsEnabled="True"/>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>

            <!-- Screenshot Display Area -->
            
            <Border Name="ScreenshotContainerBorder" Grid.Column="1" BorderBrush="#DDD" BorderThickness="1" 
                    CornerRadius="8" Margin="5 0 5 0">
                <Grid>
                    <Viewbox Stretch="Uniform" HorizontalAlignment="Center" VerticalAlignment="Center" 
                             Margin="0 0 0 0" ClipToBounds="False">
                        <Grid x:Name="ScreenshotContainer" HorizontalAlignment="Center"
                              VerticalAlignment="Center" Margin="10">
                            <Border Name="BackgroundBorder" CornerRadius="10">
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                        <GradientStop Color="#FFFFF0DC" Offset="0"/>
                                        <GradientStop Color="#FFFFCDA0" Offset="1"/>
                                    </LinearGradientBrush>
                                </Border.Background>
                            </Border>
                            
                            <Image Name="ScreenshotImage"
                                    Stretch="Uniform"
                                    SnapsToDevicePixels="True"
                                    UseLayoutRounding="True"
                                    Margin="50"
                                    Opacity="1"
                                    Visibility="Visible"
                                    VerticalAlignment="Center"
                                    RenderOptions.BitmapScalingMode="HighQuality"
                                    MouseMove="ScreenshotImage_MouseMove"
                                    MouseDown="ScreenshotImage_PreviewMouseLeftButtonDown">
                                <Image.OpacityMask>
                                    <VisualBrush>
                                        <VisualBrush.Visual>
                                            <Border Name="ScreenshotImageBorder" Background="Black"
                                                    Width="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType=Image}}"
                                                    Height="{Binding ActualHeight, RelativeSource={RelativeSource AncestorType=Image}}"
                                                    CornerRadius="20"/>
                                        </VisualBrush.Visual>
                                    </VisualBrush>
                                </Image.OpacityMask>
                            </Image>

                            <!-- Watermark -->
                            <TextBlock x:Name="WatermarkText"
                                   Text="{Binding PropWatermarkText}"
                                   Foreground="White"
                                   Opacity="0.9"
                                   FontSize="12"
                                   FontFamily="Segoe UI"
                                   FontWeight="Normal"
                                   HorizontalAlignment="Right"
                                   VerticalAlignment="Bottom"
                                   Margin="8"
                                   IsHitTestVisible="False">
                                <TextBlock.Effect>
                                    <DropShadowEffect BlurRadius="5" ShadowDepth="0" Color="Black" Opacity="0.9"/>
                                </TextBlock.Effect>
                            </TextBlock>
                            <Grid>
                                <!-- Your screenshot preview -->
                                <Image x:Name="ScreenshotPreview" Stretch="Uniform" />

                                <Border Name="PlaceHolderBorder" Margin="60,230,60,200" Background="#FAF3F0CC" CornerRadius="15" Padding="30">
                                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                        <TextBlock Text="🖼️" FontSize="48" HorizontalAlignment="Center" Opacity="0.3"/>
                                        <TextBlock Name="PlaceholderText" HorizontalAlignment="Center" Text="Your screenshot will appear here" FontSize="18" Foreground="#636e72" Margin="0,010"/>
                                        <TextBlock Name="PlaceHolderTextSub" HorizontalAlignment="Center" Text="Click &quot;New Screenshot&quot; to capture your screen with the selected styling options."
                                                   FontSize="14" Foreground="#636e72" Opacity="0.7" TextAlignment="Center"/>
                                    </StackPanel>
                                </Border>
                            </Grid>
                        </Grid>
                    </Viewbox>

                    <!--The Snackbar-->
                    <Border x:Name="TempSnackbar"
                            Background="#323232"
                            CornerRadius="6"
                            Padding="10"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Bottom"
                            Opacity="0"
                            Margin="0,0,0,30"
                            RenderTransformOrigin="0.5,1">
                        <Border.RenderTransform>
                            <TranslateTransform Y="20"/>
                        </Border.RenderTransform>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock x:Name="TempSnackbarIcon"
                                Text="✔"
                                Foreground="White"
                                FontSize="16"
                                Margin="0,0,5,0"/>
                            <TextBlock x:Name="TempSnackbarText"
                                Foreground="White"
                                FontSize="14"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>
    
    