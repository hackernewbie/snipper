<Window x:Class="Snipper.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Snipper - Create Beautiful Screenshots in seconds" Height="710" Width="950"
        Icon="resources/icon.png"
        WindowStartupLocation="CenterScreen"
        SizeChanged="Window_SizeChanged">

    <Window.Resources>
        <!-- ✅ Primary Button Brushes -->
        <SolidColorBrush x:Key="PrimaryButtonBrush" Color="#FF2A80FF"/>
        <!-- Updated Blue -->
        <SolidColorBrush x:Key="PrimaryButtonHoverBrush" Color="#FF1E6CD1"/>
        <!-- Darker Hover -->

        <!-- ✅ Secondary Button Brushes -->
        <SolidColorBrush x:Key="SecondaryButtonBrush" Color="#F8F8FF"/>
        <!-- GhostWhite -->
        <SolidColorBrush x:Key="SecondaryButtonHoverBrush" Color="#E6E6FA"/>
        <!-- Slightly darker -->
        <SolidColorBrush x:Key="SecondaryButtonBorderBrush" Color="#DCDCDC"/>
        <!-- Subtle Border -->

        <!-- ✅ Primary Button Style -->
        <Style x:Key="SmoothPrimaryButtonStyle" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Background" Value="{StaticResource PrimaryButtonBrush}"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                            CornerRadius="5"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}">
                            <!-- ✅ Respect Padding -->
                            <ContentPresenter HorizontalAlignment="Center"
                                          VerticalAlignment="Center"
                                          Margin="{TemplateBinding Padding}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource PrimaryButtonHoverBrush}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- ✅ Secondary Button Style -->
        <Style x:Key="SmoothSecondaryButtonStyle" TargetType="Button">
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Background" Value="{StaticResource SecondaryButtonBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource SecondaryButtonBorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                            CornerRadius="5"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}">
                            <!-- ✅ Respect Padding -->
                            <ContentPresenter HorizontalAlignment="Center"
                                          VerticalAlignment="Center"
                                          Margin="{TemplateBinding Padding}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource SecondaryButtonHoverBrush}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!--The WaterMark textbox-->
        <Style x:Key="StyledTextBox" TargetType="TextBox">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="Padding" Value="5,2"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="LightGray"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border 
                    Background="{TemplateBinding Background}" 
                    BorderBrush="{TemplateBinding BorderBrush}" 
                    BorderThickness="{TemplateBinding BorderThickness}" 
                    CornerRadius="5">
                            <ScrollViewer x:Name="PART_ContentHost" Margin="0"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <!-- Hover -->
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="#FF0056B3"/>
                </Trigger>
                <!-- Focus -->
                <Trigger Property="IsKeyboardFocusWithin" Value="True">
                    <Setter Property="BorderBrush" Value="#FF004A99"/>
                    <Setter Property="BorderThickness" Value="2"/>
                </Trigger>
            </Style.Triggers>
        </Style>


    </Window.Resources>
    <Grid Margin="0,0,0,-6">
        <Grid.ColumnDefinitions>
            <!--<ColumnDefinition Width="134*"/>
            <ColumnDefinition Width="449*"/>
            <ColumnDefinition Width="317*"/>-->
            <ColumnDefinition Width="30*"/>
            <ColumnDefinition Width="70*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Top Menu -->
        <!--<ContentControl Content="{StaticResource WinSnipperLogo}" 
                Width="64" Height="64" Margin="5" Grid.Row="0" Grid.Column="0"/>-->
        <Image Source="resources/logo_color_transparent.png" Height="70" Margin="25 0 0 0" 
               VerticalAlignment="Center" HorizontalAlignment="Left"/>
