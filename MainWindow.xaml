                                    <GradientStop Color="#FFEFFAF0" Offset="0"/>
                                    <GradientStop Color="#FFB9E1C8" Offset="1"/>
                                </LinearGradientBrush>
                            </Button.Background>
                        </Button>

                        <Button Name="Transparent" ToolTip="Transparent" BorderBrush="White" Click="BackgroundButton_Click" Width="170"
                                    Tag="Transparent" Margin="5,5" Padding="10 15" Foreground="Black" Cursor="Hand">
                            <Button.Background>
                                <DrawingBrush TileMode="Tile" Viewport="0,0,10,10" ViewportUnits="Absolute">
                                    <DrawingBrush.Drawing>
                                        <DrawingGroup>
                                            <GeometryDrawing Brush="White">
                                                <GeometryDrawing.Geometry>
                                                    <RectangleGeometry Rect="0,0,10,10"/>
                                                </GeometryDrawing.Geometry>
                                            </GeometryDrawing>
                                            <GeometryDrawing Brush="#FFE0E0E0">
                                                <GeometryDrawing.Geometry>
                                                    <GeometryGroup>
                                                        <RectangleGeometry Rect="0,0,5,5"/>
                                                        <RectangleGeometry Rect="5,5,5,5"/>
                                                    </GeometryGroup>
                                                </GeometryDrawing.Geometry>
                                            </GeometryDrawing>
                                        </DrawingGroup>
                                    </DrawingBrush.Drawing>
                                </DrawingBrush>
                            </Button.Background>
                        </Button>
                    </WrapPanel>

                    <!-- Sliders for padding and inset -->
                    <TextBlock Text="Advanced Styling" FontSize="15" TextAlignment="Left" 
                        FontFamily="Segoe UI" FontWeight="SemiBold"  Margin="15,15,0,5"/>
                    <UniformGrid Columns="2" Margin="5 5 5 0" HorizontalAlignment="Stretch">
                        <!-- Padding -->
                        <StackPanel Margin="5">
                            <TextBlock Text="Padding:" 
                                       FontSize="12" 
                                       FontFamily="Segoe UI" 
                                       FontWeight="SemiBold" 
                                       Margin="0,0,0,5"/>
                            
                            <Slider x:Name="PaddingSlider" 
                                        Minimum="0" 
                                        Maximum="100" 
                                        Value="40"
                                        HorizontalAlignment="Stretch"
                                        ValueChanged="PaddingSlider_ValueChanged"/> 
                            
                            <TextBlock Text="{Binding ElementName=PaddingSlider, Path=Value, StringFormat='{}{0:F0}px'}" 
                                       FontSize="11"
                                       HorizontalAlignment="Left"
                                       Margin="0,3,0,0"/>
                        </StackPanel>

                        <!-- Inset -->
                        <StackPanel Margin="5">
                            <TextBlock Text="Inset:" 
                                       FontSize="12" 
                                       FontWeight="SemiBold" 
                                       Margin="0,0,0,5"/>
                            
                            <Slider x:Name="InsetSlider" 
                                        Minimum="0" 
                                        Maximum="100" 
                                        Value="0" 
                                        HorizontalAlignment="Stretch"
                                        ValueChanged="InsetSlider_ValueChanged"/>
                            <TextBlock Text="{Binding ElementName=InsetSlider, Path=Value, StringFormat='{}{0:F0}px'}" 
                                       FontSize="11"
                                       HorizontalAlignment="Left"
                                       Margin="0,3,0,0"/>   
                        </StackPanel>

                        <!-- Depth -->
                        <StackPanel Margin="5">
                            <TextBlock Text="Depth:" 
                                       FontSize="12" 
                                       FontWeight="SemiBold" 
                                       Margin="0,0,0,5"/>

                            <Slider x:Name="DepthSlider" 
                                            Minimum="0" 
                                            Maximum="100" 
                                            Value="10"
                                            HorizontalAlignment="Stretch"
                                            ValueChanged="DepthSlider_ValueChanged"/>
                            
                            <TextBlock Text="{Binding ElementName=DepthSlider, Path=Value, StringFormat='{}{0:F0}px'}" 
                                           FontSize="11"
                                           HorizontalAlignment="Left"
                                           Margin="0,3,0,0"/>   
                        </StackPanel>

                        <!-- Shadow Blur -->
                        <StackPanel Margin="5">
                            <TextBlock Text="Shadow Blur:" 
                                       FontSize="12" 
                                       FontWeight="SemiBold" 
                                       Margin="0,0,0,5"/>
                            
                            <Slider x:Name="ShadowBlurSlider" 
                                        Minimum="0" 
                                        Maximum="20" 
                                        Value="5"
                                        HorizontalAlignment="Stretch"
                                        ValueChanged="ShadowBlurSlider_ValueChanged"/>
                            
                            <TextBlock Text="{Binding ElementName=ShadowBlurSlider, Path=Value, StringFormat='{}{0:F0}px'}" 
                                       FontSize="11"
                                       HorizontalAlignment="Left"
                                       Margin="0,3,0,0"/>
                        </StackPanel>

                        <!-- Shadow Opacity -->
                        <StackPanel Margin="5">
                            <TextBlock Text="Shadow Opacity:" 
                                       FontSize="12" 
                                       FontWeight="SemiBold" 
                                       Margin="0,0,0,5"/>
                            
                            <Slider x:Name="ShadowOpacitySlider" 
                                        Minimum="0" 
                                        Maximum="1" 
                                        Value="0.5"
                                        HorizontalAlignment="Stretch"
                                        ValueChanged="ShadowOpacitySlider_ValueChanged"/>
                            
                            <TextBlock Text="{Binding Value, ElementName=ShadowOpacitySlider, StringFormat='{}{0:P0}'}" 
                                        FontSize="11"
                                        HorizontalAlignment="Left"
                                        Margin="0,3,0,0"/>
                        </StackPanel>

                        <!-- Radius -->
                        <StackPanel Margin="5">
                            <TextBlock Text="Corners:" 
                                       FontSize="12" 
                                       FontWeight="SemiBold" 
                                       Margin="0,0,0,5"/>

                            <Slider x:Name="RoundedCornersSlider" 
                                        Minimum="0" 
                                        Maximum="50" 
                                        Value="5"
                                        HorizontalAlignment="Stretch"
                                        ValueChanged="RoundedCornersSlider_ValueChanged"/>

                            <TextBlock Text="{Binding Value, ElementName=RoundedCornersSlider, StringFormat='{}{0:P0}'}" 
                                        FontSize="11"
                                        HorizontalAlignment="Left"
                                        Margin="0,3,0,0"/>
                        </StackPanel>
                    </UniformGrid>

                    <!--Seperator-->
                    <Border Height="0.5" Background="LightGray" Margin="0,5,0,5"/>

                    <!-- Presets -->
                    <!--<StackPanel Orientation="Vertical" HorizontalAlignment="Left" 
                                Margin="0,10,0,20" VerticalAlignment="Center" >
                        <TextBlock Text="Preset:" 
                                   FontSize="12" Margin="0,10,0,10"
                                   FontWeight="SemiBold" 
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center" />

                        <ComboBox x:Name="PaddingPresetComboBox" 
                                      Width="140" 
                                      Margin="10,0,5,0"
                                      IsEditable="True"
                                      Text="15"
                                      SelectionChanged="PaddingPresetComboBox_SelectionChanged">
                            <ComboBoxItem Content="None (0px)" Tag="0"/>
                            <ComboBoxItem Content="Small (10px)" Tag="10"/>
                            <ComboBoxItem Content="Medium (20px)" Tag="20"/>
