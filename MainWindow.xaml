<Window x:Class="Snipper.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Screenshot Tool" Height="684" Width="900"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="67*"/>
            <ColumnDefinition Width="383*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Top Menu -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="140,10,0,10" HorizontalAlignment="Left" Grid.Column="1">

            <!-- Screenshot Button - Styled and Active -->
            <Button Name="CaptureButton" Content="📷 New Screenshot" Click="CaptureButton_Click" 
            Padding="15,8" Margin="5" FontSize="14" Foreground="White"
            BorderBrush="Transparent" Cursor="Hand">
                <Button.Background>
                    <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                        <GradientStop Color="#FF81C784"/>
                        <GradientStop Color="#FF388E3C" Offset="1"/>
                    </LinearGradientBrush>
                </Button.Background>
            </Button>

            <!-- Copy Button - Styled but Disabled -->
            <Button Name="CopyButton" Content="📋 Copy Screenshot" Click="CopyButton_Click" 
            Padding="15,8" Margin="5" FontSize="14" 
            Foreground="White"
            BorderBrush="Transparent" Cursor="Hand" IsEnabled="False">
                <Button.Background>
                    <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                        <GradientStop Color="#FF64B5F6"/>
                        <GradientStop Color="#FF1976D2" Offset="1"/>
                    </LinearGradientBrush>
                </Button.Background>
            </Button>

            <!-- Save Button - Styled but Disabled -->
            <Button Name="SaveButton" Content="💾 Save Screenshot" Click="SaveButton_Click" 
            Padding="15,8" Margin="5" FontSize="14" 
            Foreground="White"
            BorderBrush="Transparent" Cursor="Hand" IsEnabled="False">
                <Button.Background>
                    <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                        <GradientStop Color="#FFBA68C8"/>
                        <GradientStop Color="#FF8E24AA" Offset="1"/>
                    </LinearGradientBrush>
                </Button.Background>
            </Button>

        </StackPanel>



        <!-- Main Content Area -->
        <Grid Grid.Row="1" Margin="20,20,20,20" Grid.ColumnSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Background Options Panel -->
            <StackPanel Grid.Column="0" Margin="0,0,20,0">
                <TextBlock Text="Choose Backgrounds" FontSize="16" TextAlignment="Center" FontWeight="Bold" Margin="0,0,0,15"/>

                <Button Name="GradientBlue" Content="Blue Gradient" Click="BackgroundButton_Click" 
                        Tag="BlueGradient" Margin="0,5" Padding="10" Foreground="White">
                    <Button.Background>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="Black"/>
                            <GradientStop Color="#FF357DCC" Offset="1"/>
                        </LinearGradientBrush>
                    </Button.Background>
                </Button>
                <Button Name="GradientPurple" Content="Purple Gradient" Click="BackgroundButton_Click" 
                        Tag="PurpleGradient" Margin="0,5" Padding="10" Foreground="White">
                    <Button.Background>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="Black"/>
                            <GradientStop Color="#FF3842D8" Offset="1"/>
                        </LinearGradientBrush>
                    </Button.Background>
                </Button>
                <Button Name="GradientOrange" Content="Orange Gradient" Click="BackgroundButton_Click" 
                        Tag="OrangeGradient" Margin="0,5" Padding="10" Foreground="White">
                    <Button.Background>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="Black"/>
                            <GradientStop Color="#FFF99E17" Offset="1"/>
                        </LinearGradientBrush>
                    </Button.Background>
                </Button>
                <Button Name="SolidWhite" Content="White" Click="BackgroundButton_Click" 
                        Tag="White" Margin="0,5" Padding="10" Foreground="White" BorderBrush="#DDD">
                    <Button.Background>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="Black"/>
                            <GradientStop Color="White" Offset="1"/>
                        </LinearGradientBrush>
                    </Button.Background>
                </Button>
                <Button Name="SolidBlack" Content="Black" Click="BackgroundButton_Click" 
                        Tag="Black" Margin="0,5" Padding="10" Background="Black" Foreground="White"/>
                <Button Name="Transparent" Content="Transparent" Click="BackgroundButton_Click" 
                        Tag="Transparent" Margin="0,5" Padding="10" Background="Transparent" Foreground="Black" BorderBrush="#DDD"/>
            </StackPanel>

            <!-- Screenshot Display Area -->
            <Border Grid.Column="1" BorderBrush="#DDD" BorderThickness="1" CornerRadius="8">
                <Grid Name="ScreenshotContainer" ClipToBounds="True">
                    <!-- Background will be set programmatically -->
                    <Border Name="BackgroundBorder" CornerRadius="8">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="#E3F2FD" Offset="0"/>
                                <GradientStop Color="#FF4F85B1" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                    </Border>
                    <!-- Screenshot Image with OpacityMask for rounded corners -->
                    <Image Name="ScreenshotImage" Stretch="Uniform" Margin="20,20,20,20" Effect="{StaticResource DropShadowEffect}" VerticalAlignment="Stretch">
                        <Image.OpacityMask>
                            <VisualBrush>
                                <VisualBrush.Visual>
                                    <Border Background="Black" CornerRadius="8" Width="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType=Image}}" 
                                Height="{Binding ActualHeight, RelativeSource={RelativeSource AncestorType=Image}}"/>
                                </VisualBrush.Visual>
                            </VisualBrush>
                        </Image.OpacityMask>
                    </Image>
                    <!-- Placeholder Text -->
                    <TextBlock Name="PlaceholderText" Text="Click 'Your Screenshot will appear here" 
                   HorizontalAlignment="Center" VerticalAlignment="Center" 
                   FontSize="16" Foreground="#666" FontStyle="Italic"/>
                </Grid>
            </Border>
        </Grid>
        <ComboBox x:Name="radius" HorizontalAlignment="Left" Margin="20,356,0,0" VerticalAlignment="Top" Width="177" Grid.ColumnSpan="2" Grid.Row="1" Height="31">
            <ComboBoxItem Content="10%"/>
            <ComboBoxItem/>
        </ComboBox>
    </Grid>

    <Window.Resources>
        <DropShadowEffect x:Key="DropShadowEffect" ShadowDepth="20" BlurRadius="20" 
                          Opacity="0.3" Color="Black"/>
    </Window.Resources>
</Window>