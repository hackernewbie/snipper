<Window x:Class="Snipper.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Snipper - Create Beautiful Screenshots in seconds" Height="750" Width="950"
        Icon="resources/icon.png"
        WindowStartupLocation="CenterScreen"
        SizeChanged="Window_SizeChanged">
    <Grid Margin="0,0,0,-6">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="134*"/>
            <ColumnDefinition Width="449*"/>
            <ColumnDefinition Width="317*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Top Menu -->
        <!--<ContentControl Content="{StaticResource WinSnipperLogo}" 
                Width="64" Height="64" Margin="5" Grid.Row="0" Grid.Column="0"/>-->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="140,25,0,5" Grid.Column="1" Grid.ColumnSpan="2" HorizontalAlignment="Left" Width="496">
            <!-- Screenshot Button - Styled and Active -->
            <Button Name="CaptureButton"
        Content="📷 New Screenshot"
        Click="CaptureButton_Click"
        Padding="18,10"
        Margin="5"
        FontSize="14"
        Foreground="White"
        FontWeight="SemiBold"
        BorderBrush="Transparent"
        Cursor="Hand">
                <Button.Background>
                    <!-- Primary CTA: vibrant emerald gradient -->
                    <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                        <GradientStop Color="#FF43D27C" Offset="0"/>
                        <GradientStop Color="#FF2E7D32" Offset="1"/>
                    </LinearGradientBrush>
                </Button.Background>
            </Button>

            <Button Name="CopyButton"
        Content="📋 Copy Screenshot"
        Click="CopyButton_Click"
        Padding="16,9"
        Margin="5"
        FontSize="14"
        Foreground="White"
        BorderBrush="Transparent"
        Cursor="Hand">
                <Button.Background>
                    <!-- Secondary: subtle blue gradient -->
                    <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                        <GradientStop Color="#FF7ECFFF" Offset="0"/>
                        <GradientStop Color="#FF1E88E5" Offset="1"/>
                    </LinearGradientBrush>
                </Button.Background>
            </Button>

            <Button Name="SaveButton"
        Content="💾 Save Screenshot"
        Click="SaveButton_Click"
        Padding="16,9"
        Margin="5"
        FontSize="14"
        Foreground="White"
        BorderBrush="Transparent"
        Cursor="Hand">
                <Button.Background>
                    <!-- Secondary: soft purple gradient -->
                    <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                        <GradientStop Color="#FFE1BEE7" Offset="0"/>
                        <GradientStop Color="#FF8E24AA" Offset="1"/>
                    </LinearGradientBrush>
                </Button.Background>
            </Button>

        </StackPanel>



        <!-- Main Content Area -->
        <Grid Grid.Row="1" Margin="20,20,20,10" Grid.ColumnSpan="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="10*"/>
                <ColumnDefinition Width="33*"/>
            </Grid.ColumnDefinitions>

            <!-- Background Options Panel, the Sidebar -->
            <ScrollViewer VerticalScrollBarVisibility="Auto" Height="Auto">
                <StackPanel Grid.Column="0" Margin="0,0,10,0">
                    <TextBlock Text="Choose Backgrounds" FontSize="15" TextAlignment="Center" 
                          FontFamily="Segoe UI" FontWeight="SemiBold"  Margin="0,0,0,15"/>

                    <WrapPanel Orientation="Horizontal" HorizontalAlignment="Left">
                        <Button Name="GradientBlue" ToolTip="Blue Gradient" BorderBrush="White" Click="BackgroundButton_Click" 
                                Tag="BlueGradient" Margin="5,5" Padding="10 15" Foreground="White"  
                                RenderTransformOrigin="0.5,0.5" Cursor="Hand" Width="80" HorizontalAlignment="Left">
                            <Button.Background>
                                <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                                    <GradientStop Color="#FFDCEBFF" Offset="0"/>
                                    <GradientStop Color="#FFAFD2F0" Offset="1"/>
                                </LinearGradientBrush>
                            </Button.Background>
                        </Button>
                        <Button Name="GradientPurple" ToolTip="Purple Gradient" BorderBrush="White" Click="BackgroundButton_Click" HorizontalAlignment="Left"
                                Tag="PurpleGradient" Margin="5,5" Padding="10 15" Width="80" Foreground="White" Cursor="Hand" >
                            <Button.Background>
                                <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                                    <GradientStop Color="#FFEBE1F5" Offset="0"/>
                                    <GradientStop Color="#FFC3AAE1" Offset="1"/>
                                </LinearGradientBrush>
                            </Button.Background>
                        </Button>
                        <Button Name="GradientOrange" ToolTip="Orange Gradient" BorderBrush="White" Click="BackgroundButton_Click" 
                                Tag="OrangeGradient" Margin="5,5" Padding="10 15" Width="80" Foreground="White" Cursor="Hand" >
                            <Button.Background>
                                <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                                    <GradientStop Color="#FFFFF0DC" Offset="0"/>
                                    <GradientStop Color="#FFFFCDA0" Offset="1"/>
                                </LinearGradientBrush>
                            </Button.Background>
                        </Button>

                        <Button Name="GrayGradient" ToolTip="Gray Gradient" BorderBrush="White" Click="BackgroundButton_Click" 
                                Tag="GrayGradient" Margin="5,5" Padding="10 15" Width="80" Foreground="White" Cursor="Hand" >
                            <Button.Background>
                                <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                                    <GradientStop Color="#FFF0F0F0" Offset="0"/>
                                    <GradientStop Color="#FFC8C8C8" Offset="1"/>
                                </LinearGradientBrush>
                            </Button.Background>
                        </Button>

                        <Button Name="BlackGradient" ToolTip="Black Gradient" BorderBrush="White" Click="BackgroundButton_Click" 
                                Tag="BlackGradient" Margin="5,5" Padding="10 15" Width="80" Foreground="White" Cursor="Hand">
                            <Button.Background>
                                <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                                    <GradientStop Color="#FFD2D2D2" Offset="0"/>
                                    <GradientStop Color="#FF8C8C8C" Offset="1"/>
                                </LinearGradientBrush>
                            </Button.Background>
                        </Button>

                        <Button Name="GradientTeal" ToolTip="Teal Gradient" BorderBrush="White" Click="BackgroundButton_Click" 
                            Tag="TealGradient" Margin="5,5" Padding="10 15" Width="80" Foreground="White" Cursor="Hand">
                            <Button.Background>
                                <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                                    <GradientStop Color="#FFE1F5F0" Offset="0"/>
                                    <GradientStop Color="#FFB9E1D7" Offset="1"/>
                                </LinearGradientBrush>
                            </Button.Background>
                        </Button>

                        <Button Name="GradientPink" ToolTip="Pink Gradient" BorderBrush="White" Click="BackgroundButton_Click" 
                            Tag="PinkGradient" Margin="5,5" Padding="10 15" Width="80" Foreground="White" Cursor="Hand">
                            <Button.Background>
                                <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                                    <GradientStop Color="#FFFFF0F5" Offset="0"/>
                                    <GradientStop Color="#FFFAC3D2" Offset="1"/>
                                </LinearGradientBrush>
                            </Button.Background>
                        </Button>

                        <Button Name="GradientCyan" ToolTip="Cyan Gradient" BorderBrush="White" Click="BackgroundButton_Click" 
                            Tag="CyanGradient" Margin="5,5" Padding="10 15" Width="80" Foreground="White" Cursor="Hand">
                            <Button.Background>
                                <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                                    <GradientStop Color="#FFE6FAFA" Offset="0"/>
                                    <GradientStop Color="#FFBEE6E6" Offset="1"/>
                                </LinearGradientBrush>
                            </Button.Background>
                        </Button>

                        <Button Name="GradientYellow" ToolTip="Yellow Gradient" BorderBrush="White" Click="BackgroundButton_Click" 
                                Tag="YellowGradient" Margin="5,5" Padding="10 15" Width="80" Foreground="Black" Cursor="Hand">
                            <Button.Background>
                                <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                                    <GradientStop Color="#FFFFFFE6" Offset="0"/>
                                    <GradientStop Color="#FFFFF0B4" Offset="1"/>
                                </LinearGradientBrush>
                            </Button.Background>
                        </Button>

                        <Button Name="GradientRed" ToolTip="Red Gradient" BorderBrush="White" Click="BackgroundButton_Click" 
                            Tag="RedGradient" Margin="5,5" Padding="10 15" Width="80" Foreground="White" Cursor="Hand">
                            <Button.Background>
                                <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                                    <GradientStop Color="#FFFFEBEB" Offset="0"/>
                                    <GradientStop Color="#FFF5B4B4" Offset="1"/>
                                </LinearGradientBrush>
                            </Button.Background>
                        </Button>

                        <Button Name="GradientIndigo" ToolTip="Indigo Gradient" BorderBrush="White" Click="BackgroundButton_Click" 
                            Tag="IndigoGradient" Margin="5,5" Padding="10 15" Width="80" Foreground="White" Cursor="Hand">
                            <Button.Background>
                                <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                                    <GradientStop Color="#FFE6EBFA" Offset="0"/>
                                    <GradientStop Color="#FFB9C3E1" Offset="1"/>
                                </LinearGradientBrush>
                            </Button.Background>
                        </Button>

                        <Button Name="GradientGreen" ToolTip="Green Gradient" BorderBrush="White" Click="BackgroundButton_Click" 
                                Tag="GreenGradient" Margin="5,5" Padding="10 15" Width="80" Foreground="White" Cursor="Hand">
                            <Button.Background>
                                <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                                    <GradientStop Color="#FFEFFAEA" Offset="0"/>
                                    <GradientStop Color="#FFB9E1B9" Offset="1"/>
                                </LinearGradientBrush>
                            </Button.Background>
                        </Button>

                        <Button Name="GradientCharcoal" ToolTip="Charcoal Gradient" BorderBrush="White" Click="BackgroundButton_Click" 
                            Tag="CharcoalGradient" Margin="5,5" Padding="10 15" Width="80" Foreground="White" Cursor="Hand">
                            <Button.Background>
                                <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                                    <GradientStop Color="#FFF0F0F0" Offset="0"/>
                                    <GradientStop Color="#FFA0A0A0" Offset="1"/>
                                </LinearGradientBrush>
                            </Button.Background>
                        </Button>

                        <Button Name="GradientLightBlue" ToolTip="Light Blue Gradient" BorderBrush="White" Click="BackgroundButton_Click" 
                            Tag="LightBlueGradient" Margin="5,5" Padding="10 15" Width="80" Foreground="White" Cursor="Hand">
                            <Button.Background>
                                <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                                    <GradientStop Color="#FFebf5ff" Offset="0"/>
                                    <GradientStop Color="#ffb9d7f0" Offset="1"/>
                                </LinearGradientBrush>
                            </Button.Background>
                        </Button>

                        <Button Name="GradientPeach" ToolTip="Peach Gradient" BorderBrush="White" Click="BackgroundButton_Click" 
                                Tag="PeachGradient" Margin="5,5" Padding="10 15" Width="80" Foreground="White" Cursor="Hand">
                            <Button.Background>
                                <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                                    <GradientStop Color="#fff5f0" Offset="0"/>
                                    <GradientStop Color="#ffd2be" Offset="1"/>
                                </LinearGradientBrush>
                            </Button.Background>
                        </Button>

                        <Button Name="GradientSkyBlue" ToolTip="Sky Blue Gradient" BorderBrush="White" Click="BackgroundButton_Click" 
                                Tag="SkyBlueGradient" Margin="5,5" Padding="10 15" Width="80" Foreground="White" Cursor="Hand">
                            <Button.Background>
                                <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                                    <GradientStop Color="#FFE6F5FF" Offset="0"/>
                                    <GradientStop Color="#FFB9D7F0" Offset="1"/>
                                </LinearGradientBrush>
                            </Button.Background>
                        </Button>

                        <Button Name="GradientLavender" ToolTip="Lavender Gradient" BorderBrush="White" Click="BackgroundButton_Click" 
                            Tag="LavenderGradient" Margin="5,5" Padding="10 15" Width="80" Foreground="White" Cursor="Hand">
                            <Button.Background>
                                <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                                    <GradientStop Color="#FFF5F0FF" Offset="0"/>
                                    <GradientStop Color="#FFD2BEE6" Offset="1"/>
                                </LinearGradientBrush>
                            </Button.Background>
                        </Button>

                        <Button Name="GradientEmerald" ToolTip="Emerald Gradient" BorderBrush="White" Click="BackgroundButton_Click" 
                            Tag="EmeraldGradient" Margin="5,5" Padding="10 15" Width="80" Foreground="White" Cursor="Hand">
                            <Button.Background>
                                <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                                    <GradientStop Color="#FFEFFAF0" Offset="0"/>
                                    <GradientStop Color="#FFB9E1C8" Offset="1"/>
                                </LinearGradientBrush>
                            </Button.Background>
                        </Button>

                        <Button Name="Transparent" ToolTip="Transparent" BorderBrush="White" Click="BackgroundButton_Click" Width="170"
                                    Tag="Transparent" Margin="5,5" Padding="10 15" Foreground="Black" Cursor="Hand">
                            <Button.Background>
                                <DrawingBrush TileMode="Tile" Viewport="0,0,10,10" ViewportUnits="Absolute">
                                    <DrawingBrush.Drawing>
                                        <DrawingGroup>
                                            <GeometryDrawing Brush="White">
                                                <GeometryDrawing.Geometry>
                                                    <RectangleGeometry Rect="0,0,10,10"/>
                                                </GeometryDrawing.Geometry>
                                            </GeometryDrawing>
                                            <GeometryDrawing Brush="#FFE0E0E0">
                                                <GeometryDrawing.Geometry>
                                                    <GeometryGroup>
                                                        <RectangleGeometry Rect="0,0,5,5"/>
                                                        <RectangleGeometry Rect="5,5,5,5"/>
                                                    </GeometryGroup>
                                                </GeometryDrawing.Geometry>
                                            </GeometryDrawing>
                                        </DrawingGroup>
                                    </DrawingBrush.Drawing>
                                </DrawingBrush>
                            </Button.Background>
                        </Button>

                    </WrapPanel>

                    <!-- Sliders for padding and inset -->
                    <TextBlock Text="Padding:" FontWeight="Bold" FontSize="15" HorizontalAlignment="Center" Margin="0,010,10,10"/>
                    <Slider x:Name="PaddingSlider" 
                    Minimum="0" 
                    Maximum="100" 
                    Value="50" 
                    Width="150"
                    ValueChanged="PaddingSlider_ValueChanged"/>
                    <TextBlock Text="{Binding ElementName=PaddingSlider, Path=Value, StringFormat='{}{0:F0}px'}" 
                   VerticalAlignment="Center" HorizontalAlignment="Center"
                   Margin="10,0,0,10"/>

                    <TextBlock Text="Inset:" FontWeight="Bold" FontSize="15" HorizontalAlignment="Center" Margin="0,010,10,10"/>
                    <Slider x:Name="InsetSlider" 
                    Minimum="0" 
                    Maximum="100" 
                    Value="0" 
                    Width="150"
                    ValueChanged="InsetSlider_ValueChanged"/>
                    <TextBlock Text="{Binding ElementName=InsetSlider, Path=Value, StringFormat='{}{0:F0}px'}" 
                   VerticalAlignment="Center" HorizontalAlignment="Center"
                   Margin="10,0,0,0"/>

                    <TextBlock Text="Depth:" FontWeight="Bold" FontSize="15" HorizontalAlignment="Center" Margin="0,010,10,10"/>
                    <Slider x:Name="DepthSlider" 
                    Minimum="0" 
                    Maximum="100" 
                    Value="10" 
                    Width="150"
                    ValueChanged="DepthSlider_ValueChanged"/>
                    <TextBlock Text="{Binding ElementName=DepthSlider, Path=Value, StringFormat='{}{0:F0}px'}" 
                   VerticalAlignment="Center" HorizontalAlignment="Center"
                   Margin="10,0,0,10"/>

                    <TextBlock Text="Shadow Blur:" FontWeight="Bold" FontSize="15" Width="94" Margin="10,0,0,10"/>
                    <Slider x:Name="ShadowBlurSlider" Minimum="0" Maximum="20" Value="5" Width="120"
                    ValueChanged="ShadowBlurSlider_ValueChanged"/>
                    <TextBlock Text="{Binding ElementName=ShadowBlurSlider, Path=Value, StringFormat='{}{0:F0}px'}" Width="80"
                    Margin="10,0,0,10"/>

                    <TextBlock Text="Shadow Opacity:" FontWeight="Bold" FontSize="15" Width="117" Margin="10,0,0,10"/>
                    <Slider x:Name="ShadowOpacitySlider" Minimum="0" Maximum="1" Value="0.5" Width="120"
                    ValueChanged="ShadowOpacitySlider_ValueChanged"/>
                    <TextBlock Text="{Binding Value, ElementName=ShadowOpacitySlider, StringFormat=\{0:F0\}%}" Width="25"
                  Margin="10 10 10 10"  />


                    <!-- Presets -->
                    <TextBlock Text="Quick Padding:" Margin="0,10,0,20" FontSize="15" FontWeight="Bold"
                           HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    <ComboBox x:Name="PaddingPresetComboBox" 
                      Width="140" 
                      IsEditable="True"
                      Text="20"
                      SelectionChanged="PaddingPresetComboBox_SelectionChanged">
                        <ComboBoxItem Content="None (0px)" Tag="0"/>
                        <ComboBoxItem Content="Small (10px)" Tag="10"/>
                        <ComboBoxItem Content="Medium (20px)" Tag="20"/>
                        <ComboBoxItem Content="Large (40px)" Tag="40"/>
                        <ComboBoxItem Content="Extra Large (60px)" Tag="60"/>
                        <ComboBoxItem Content="Custom" Tag="-1"/>
                    </ComboBox>
                    <TextBlock Text="px" VerticalAlignment="Center" Margin="5,0,0,0" HorizontalAlignment="Center"/>

                    <CheckBox x:Name="WatermarkToggle"
                              IsChecked="True"
                              Margin="0,0,10,0"
                              Checked="WatermarkToggle_Checked"
                              Unchecked="WatermarkToggle_Unchecked"/>

                    <TextBox x:Name="WatermarkInput"
                             Width="200"
                             Height="25"
                             Margin="0,0,10,0"
                             Text="{Binding PropWatermarkText}"
                             VerticalContentAlignment="Center"
                             TextChanged="WatermarkInput_TextChanged"
                             IsEnabled="True"/>
                </StackPanel>
            </ScrollViewer>

            <!-- Screenshot Display Area -->
            <Border Grid.Column="1" BorderBrush="#DDD" BorderThickness="1" CornerRadius="8" Margin="5">
                <Grid>
                    <Viewbox Stretch="Uniform" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0">
                        <Grid x:Name="ScreenshotContainer" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <Border Name="BackgroundBorder" CornerRadius="8">
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                        <GradientStop Color="#FFFFF0DC" Offset="0"/>
                                        <GradientStop Color="#FFFFCDA0" Offset="1"/>
                                    </LinearGradientBrush>
                                </Border.Background>
                            </Border>
                            <!--<Image Name="ScreenshotImage" Stretch="None" SnapsToDevicePixels="True"
                                   UseLayoutRounding="True" Margin="25" Opacity="1" Visibility="Visible" 
                                   VerticalAlignment="Center">-->
                            <Image Name="ScreenshotImage"
                                    Stretch="Uniform"
                                    SnapsToDevicePixels="True"
                                    UseLayoutRounding="True"
                                    Margin="25"
                                    Opacity="1"
                                    Visibility="Visible"
                                    VerticalAlignment="Center"
                                    RenderOptions.BitmapScalingMode="HighQuality">
                                <Image.OpacityMask>
                                    <VisualBrush>
                                        <VisualBrush.Visual>
                                            <Border Background="Black" CornerRadius="8" Width="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType=Image}}"
                                                    Height="{Binding ActualHeight, RelativeSource={RelativeSource AncestorType=Image}}"/>
                                        </VisualBrush.Visual>
                                    </VisualBrush>
                                </Image.OpacityMask>
                            </Image>
                            <Grid>
                                <!-- Your screenshot preview -->
                                <Image x:Name="ScreenshotPreview" Stretch="Uniform" />

                                <Border Name="PlaceHolderBorder" Margin="60,200,60,200" Background="#FAF3F0CC" CornerRadius="15" Padding="30">
                                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                        <TextBlock Text="🖼️" FontSize="48" HorizontalAlignment="Center" Opacity="0.3"/>
                                        <TextBlock Name="PlaceholderText" HorizontalAlignment="Center" Text="Your screenshot will appear here" FontSize="18" Foreground="#636e72" Margin="0,010"/>
                                        <TextBlock Name="PlaceHolderTextSub" HorizontalAlignment="Center" Text="Click &quot;New Screenshot&quot; to capture your screen with the selected styling options."
                                                   FontSize="14" Foreground="#636e72" Opacity="0.7" TextAlignment="Center"/>
                                    </StackPanel>
                                </Border>

                                <!-- Watermark -->
                                <TextBlock x:Name="WatermarkText"
                                   Text="{Binding PropWatermarkText}"
                                   Foreground="White"
                                   Opacity="0.9"
                                   FontSize="12"
                                   FontFamily="Segoe UI"
                                   FontWeight="Normal"
                                   HorizontalAlignment="Right"
                                   VerticalAlignment="Bottom"
                                   Margin="8"
                                   IsHitTestVisible="False">
                                    <TextBlock.Effect>
                                        <DropShadowEffect BlurRadius="5" ShadowDepth="0" Color="Black" Opacity="0.9"/>
                                    </TextBlock.Effect>
                                </TextBlock>

                            </Grid>
                            <!--<Border Name="PlaceholderWatermark" CornerRadius="15" Margin="20 20 25 25">
                                <StackPanel VerticalAlignment="Bottom" HorizontalAlignment="Right">
                                    <TextBlock Name="txtWatermark" FontSize="14" Opacity="1" FontWeight="Bold"  Foreground="AntiqueWhite">
                                        <Run Text="Screenshot by WinSnipper"/>
                                    </TextBlock>
                                </StackPanel>
                            </Border>-->
                        </Grid>
                    </Viewbox>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>